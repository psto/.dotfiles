general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 1
}

order += "cpu_temperature 0"
order += "cpu_usage 0"
order += "disk /"
order += "wireless wlp2s0"
order += "volume master"
order += "battery all"
order += "tztime local"

cpu_temperature 0 {
        format = "  %degrees °C "
        path = "/sys/class/thermal/thermal_zone0/temp"
}

cpu_usage {
        format = "   %usage "
}

disk "/" {
        format = " %free Free "
}

wireless wlp2s0 {
        format_up = " %essid "
        format_down = " Disconnected "
}

volume master {
        format = "♪: %volume "
        format_muted = " 🔇 "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        format = " %status %percentage %remaining "
    status_chr = "⚡ "
    status_bat = "🔋 "
        status_unk = "? "
        status_full = "☻ "

    low_threshold = 11
    threshold_type = percentage
    integer_battery_capacity = true
    last_full_capacity = true
    hide_seconds = true
}

tztime local {
        format = " %time "
        format_time = "%a %-d %b %H:%M"
}
