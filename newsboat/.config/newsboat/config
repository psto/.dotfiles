# set browser and redirect standard output/error to preserve newsboat interface
browser "w3m %u"
# browser "brave-beta %u >/dev/null 2>&1 &"
# external-url-viewer "brave-beta"

# Feed settings
prepopulate-query-feeds yes
refresh-on-startup yes

macro w set browser "mpv %u" ; open-in-browser ; set browser "brave %u"

# -- keymaps -------------------------------------------------------------------

unbind-key j
unbind-key k
unbind-key h
unbind-key H
unbind-key L
unbind-key c
unbind-key ,

bind-key ; macro-prefix
bind-key h quit
bind-key BACKSPACE quit
bind-key j down
bind-key k up
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key c toggle-show-read-feeds

